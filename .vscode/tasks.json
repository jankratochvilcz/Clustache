{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clustache: Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Clustache.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clustache: Watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Clustache.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clustache: Build image",
            "type": "shell",
            "command": "powershell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.script/clustache-build-image.ps1"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Docker image and restart Kubernetes deployment"
        },
        {
            "label": "Clustache: Ship chart",
            "type": "shell",
            "command": "powershell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.script/clustache-ship-chart.ps1"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Docker image and restart Kubernetes deployment"
        }
    ]
}